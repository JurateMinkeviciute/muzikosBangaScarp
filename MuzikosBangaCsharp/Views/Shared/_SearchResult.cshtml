@model MuzikosBangaCsharp.ViewModels.SearchViewModel

<div class="tracklistContainer borderBottom">
    <h2>DAINOS</h2>
    <ul class="tracklist">

        @if (Model.songs.Count > 0)
        {
            int listNumber = 1;
            foreach (var song in Model.songs)
            {
                <li class='tracklistRow'>
                    <div class='trackCount'>
                        <img class='play' src='~/Content/images/icons/play-white.png' onclick='setTrack(@song.id, tempPlaylist, true)'>
                        <span class='trackNumber'>@listNumber</span>
                    </div>

                    <div class='trackInfo'>
                        <span class='trackName'>@song.title</span>
                        <span class='artistName'>@song.nameOfArtist</span>
                    </div>

                    <div class='trackOptions'>
                        <input type='hidden' class='songId' value=@song.id>
                        <img class='optionsButton' src='~/Content/images/icons/more.png' onclick='showOptionsMenu(this)'>
                    </div>

                    <div class='trackDuration'>
                        <span class='duration'>@song.duration</span>
                    </div>
                </li>
                listNumber++;
            }
        }
        else
        {
            <span class="noResults">Nerasta dainų pagal kriterijų: @Model.search</span>
        }
    </ul>
</div>

<div class="artistContainer borderBottom">
    <h2>ATLIKĖJAI</h2>
    @if (Model.artists.Count > 0)
    {
        foreach (var artist in Model.artists)
        {
            <div class='searchResultRow'>
                <div class='artistName'>

                    <span onclick='openPage("artist/@artist.id")'>
                        @artist.name
                    </span>

                </div>

            </div>
        }
    }
    else
    {
        <span class='noResults'>Nerasta atlikėjų pagal kriterijų: @Model.search</span>
    }
</div>
<div class="gridViewContainer">
    <h2>ALBUMAI</h2>
    @if (Model.albums.Count > 0)
    {
        foreach (var album in Model.albums)
        {
            <div class='gridViewItem'>
                <span onclick='openPage("Album/@album.id")'>
                    <img src="~/Content/images/artwork/@album.artworkPath" />
                    <div class='gridViewInfo'>
                        @album.title
                    </div>
                </span>
            </div>
        }
    }
    else
    {
        <span class='noResults'>Nerasta albumų pagal kriterijų: @Model.search</span>
    }
</div>
